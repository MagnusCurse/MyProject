<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ArticleMapper">
    <insert id="publish">
           insert into article_info (title,content,user_id) values (#{title},#{content},#{user_id})
    </insert>

    <select id="initBlogs" resultType="com.example.demo.model.Article">
        select * from article_info
    </select>

    <select id="initBlog" resultType="com.example.demo.model.Article">
        select * from article_info where id = #{id}
    </select>
</mapper>
